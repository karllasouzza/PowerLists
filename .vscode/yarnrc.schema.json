{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Yarn Config (.yarnrc.yml)",
  "type": "object",
  "properties": {
    "nmHoistingLimits": {
      "type": "string",
      "enum": ["workspaces", "dependencies", "none"]
    },
    "httpTimeout": {
      "type": ["number", "null"],
      "description": "Timeout for HTTP requests in milliseconds"
    }
  },
  "additionalProperties": true
}
