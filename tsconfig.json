{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "paths": {
      "@/*": ["./src/*"],
      "/assets/*": ["./assets/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "./*.d.ts", "nativewind-env.d.ts", "tailwind.config.js"]
}
